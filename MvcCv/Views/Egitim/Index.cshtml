@using MvcCv.Models
@model List<TBL_EGİTİM>


@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Eğitim Bilgileri</h2>
@Html.Raw(TempData["msg"])
<table class="table table-striped table-bordered">
    <tr>
        <th>ID</th>
        <th>Başlık</th>
        <th>Alt Başlık</th>
        <th>Alt Başlık 2 </th>
        <th>GNO</th>
        <th>Tarih</th>
        <th></th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.ID</td>
            <td>@item.Baslik</td>
            <td>@item.AltBaslik</td>
            <td>@item.AltBaslik2</td>
            <td>@item.GNO</td>
            <td>@item.Tarih</td>
            <td><a href="/Egitim/EgitimGetir/@item.ID" class="btn btn-warning">Düzenle</a></td>
            <td><a class="btn btn-danger" href="/Egitim/EgitimSil/@item.ID">Sil</a></td>
        </tr>
    }


</table>

<a href="/Egitim/EgitimEkle" class="btn btn-success">Yeni Eğitim Ekle</a>

