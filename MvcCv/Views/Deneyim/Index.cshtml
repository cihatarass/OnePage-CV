@using MvcCv.Models;
@model List<TBL_DENEYİM>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Deneyimlerim</h2>
@Html.Raw(TempData["msg"])
<table class="table table-striped table-bordered">
    <tr>
        <th>ID</th>
        <th>Başlık</th>
        <th>Alt Başlık</th>
        <th>Açıklama</th>
        <th>Tarih Aralığı</th>
        <th></th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.ID</td>
            <td>@item.Baslik</td>
            <td>@item.AltBaslik</td>
            <td>@item.Aciklama</td>
            <td>@item.Tarih</td>
            <td><a href="/Deneyim/DeneyimGetir/@item.ID" class="btn btn-warning">Düzenle</a></td>
            <td><a class="btn btn-danger" href="/Deneyim/DeneyimSil/@item.ID">Sil</a></td>
        </tr>
    }


</table>

<a href="/Deneyim/DeneyimEkle" class="btn btn-success">Yeni Deneyim Ekle</a>